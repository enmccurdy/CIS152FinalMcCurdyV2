@page
@model DrinkShopWebApp2.Pages.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<hr />
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderFilled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderFilled)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.FirstName)
        </dd>
    </dl>
    
    <form method="post">
        @* wrap below button(s) in a <div> element and add boostrap class="mt-2" - to add
        margin 2 to create space between button and display area. *@
        <div class="mt-2">
            <input type="hidden" asp-for="Order.OrderId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @* can add bootstrap 'btn' class and coloring ex. 'btn-primary' to the Create button below
            just add to <a> start tag - class="btn btn-primary" 'btn-info' 'btn-success'
            *@
            <a asp-page="./Index" class="btn btn-success">Back to List</a>
        </div>
    </form>
</div>
