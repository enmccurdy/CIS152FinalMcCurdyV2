@page
@model DrinkShopWebApp2.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderId" />
            <div class="form-group">
                <label asp-for="Order.OrderDate" class="control-label"></label>
                <input asp-for="Order.OrderDate" class="form-control" />
                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderFilled" class="control-label"></label>
                <input asp-for="Order.OrderFilled" class="form-control" />
                <span asp-validation-for="Order.OrderFilled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderTotal" class="control-label"></label>
                <input asp-for="Order.OrderTotal" class="form-control" />
                <span asp-validation-for="Order.OrderTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.CustomerId" class="control-label"></label>
                <select asp-for="Order.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Order.CustomerId" class="text-danger"></span>
            </div>
            @* move 'Back to List' button at bottom of page into below <div> element,
            then add boostrap class="mt-2" - to add margin 2 to <div> to create space
            between button and display area. Then use '&nbsp;' to add a spaces between
            the two buttons. Add boostrap btn class/color to <a> element start tag. *@
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                &nbsp;&nbsp;<a asp-page="./Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

